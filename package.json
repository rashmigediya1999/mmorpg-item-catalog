{
  "type": "module",
  "name": "game-catalog-api",
  "version": "1.0.0",
  "description": "API for managing MMORPG game items",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js --runInBand",
    "test:unit": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js tests/unit --runInBand",   
    "test:integration": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js tests/integration --runInBand",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js --coverage",
    "test:report": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js --runInBand --testResultsProcessor=./node_modules/jest-html-reporter",
    "lint": "eslint ."   
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "express-validator": "^7.0.1",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "winston": "^3.8.2",
    "jest-html-reporter": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",   
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",    
    "eslint": "^8.38.0",   
    "nodemon": "^2.0.22"   
  }, 
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "",
  "license": "MIT"
}
